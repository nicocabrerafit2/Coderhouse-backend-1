<div>
  <h1>Productos almacenados "vista en tiempo real con websocket":</h1>
  <ul id="products"></ul>
  <div class="article">
    <h2>Agregar un producto</h2>
    <input id="addTitle" type="text" placeholder="Titulo" />
    <input id="addDescription" type="text" placeholder="Descripcion" />
    <input id="addCode" type="text" placeholder="Codigo" />
    <input id="addPrice" type="number" placeholder="Precio" />
    <input id="addStock" type="number" placeholder="Stock" />
    <input id="addCategory" type="text" placeholder="Categoria" />

    <button id="button-add" onclick="addProduct()">Agregar</button>
  </div>
  <div class="article">
    <h2>Eliminar un producto</h2>
    <input
      id="deleteProduct"
      type="number"
      placeholder="Id del producto a borrar"
    />
    <button id="button-delete" onclick="deleteProduct()">Eliminar</button>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="./index.js"></script>